<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheet/form.css">
    <link rel="stylesheet" href="/stylesheet/table.css">
    <title><%= title %></title>
</head>
<body>
    <div class="log">
        <div class="logincard">
            <% if(session.teacher_id){%>
                <form action="">
                <h1><span style="color: rgb(50, 94, 176);"><%= session.school_name %></span></h1>
                <h1>Welcome to your work space <br> Teacher <span style="color: rgb(97, 98, 181);"><%= session.user_name %></span>, Your class is <%= session.class_name %></h1>
                <a href="teacher/logout">
                    <button style="padding: 12px;" class="btn">Logout</button></a>
            </form>
                <div class="col">
                   <table>
                    <tr>
                        <th>First name</th>
                        <th>Sur Name</th>
                        <th>Gender</th>
                        <th>TERMS</th>
                    </tr>
                    <% if (studentdata.length > 0){
                        studentdata.forEach(function(data){%>
                            <tr>
                                <td><%= data.student_name %></td>
                                <td><%= data.sur_name %></td>
                                <td><%= data.gender %></td>
                                <td>
                                    <a href="/first_term/<%= data.student_id %>">
                                        <button style="padding: 5px;" id="submit">1st</button></a>
                                    <a href="/second_term/<%= data.student_id %>">
                                        <button style="padding: 5px;" id="submit">2nd</button></a>
                                    <a href="/third_term/<%= data.student_id %>">
                                        <button style="padding: 5px;" id="submit">3rd</button></a>
                                    <a href="/chart/<%= data.student_id %>">
                                        <button style="padding: 3px; font-size: 12px; 
                                        color: rgba(245, 222, 179, 0.601); 
                                        background: rgba(18, 21, 22, 0.967);
                                        padding: 4px">
                                        Skill Area</button>
                                    </a>
                                </td>
                            </tr>
                        <%})
                    }%>
                   </table>
                   <div class="col">
                   </div>
                </div>
                <%}else{%>
                    <div class="col">
                        <form action="teacher/login" method="post">
                            <input type="text" name="teacher_id" id="" placeholder="teacher_id">
                            <input type="text" name="phone_number" id="" placeholder="phone Number">
                            <input type="submit" value="login">
                        </form>
                    </div>
                <%}%>
</body>
</html>